<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Noto+Serif&family=Varela+Round&display=swap" rel="stylesheet">
      <link rel="stylesheet" href="css/styles.css">
      <title>To-do List</title>
</head>
<body>
      <div class="box" id="heading">
            <h1><%= listTitle %></h1>
      </div>

      <div class="box">
            <% for(var i=0; i<newListItem.length; i++) { %>
                  <div class="item">
                        <input type="checkbox">
                        <p><%= newListItem[i] %></p>
                  </div>
            <% } %>
            <form action="/" class=item"" method="post">
                  <input type="text" name="newItem" placeholder="New Item" required autofocus autocomplete="off">
                  <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
      </div>

      
</body>
</html>